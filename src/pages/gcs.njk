{% extends "main.njk" %}
{% block content %}
    <gcs-content>
        <link rel="stylesheet" href='{{ asset("/assets/styles/gcs.css") }}'>
        <link rel="stylesheet" href='{{ asset("/assets/styles/faq.css") }}'>
        <main class="gcs_page">
            <section id="{{ navItemsMap.gcs.anchors[0].id }}"
                     class="screen-1 theme-turquoise py-2 px-2"
                     aria-labelledby="title-1">
                <h2 class="screen-title title-1" alt="{{ navItemsMap.gcs.anchors[0].title }}">{{ t("gcs.page_1.title") }}</h2>
                <!-- Contenu de l'écran 1 -->
                <h3 class="mt-2">{{ t("gcs.page_1.subtitle_1") }}</h3>
                <p class="mt-1">{{ t("gcs.page_1.text_1") }}</p>
                <h3 class="mt-2">{{ t("gcs.page_1.subtitle_2") }}</h3>
                <p class="mt-1">{{ t("gcs.page_1.text_2") }}</p>
                <h3 class="mt-2">{{ t("gcs.page_1.subtitle_3") }}</h3>
                <p class="mt-1">{{ t("gcs.page_1.text_3") }}</p>
            </section>
            <section id="{{ navItemsMap.gcs.anchors[1].id }}" class="screen-3 theme-canard py-2 px-2" aria-labelledby="title-3">
                <h2 id="title-3" class="screen-title title-3">{{ t("gcs.page_3.title") |safe }}</h2>
                <picture>
                    <source type="image/webp"
                            srcset="{{ asset("/assets/images/gcs/world-map.webp") }} 800w,
                                    {{ asset("/assets/images/gcs/world-map.webp") }} 1600w"
                            sizes="(min-width: 800px) 800px,
                                   100vw" />
                    <source type="image/png"
                            srcset="{{ asset("/assets/images/gcs/world-map.png") }} 800w,
                                    {{ asset("/assets/images/gcs/world-map.png") }} 1600w"
                            sizes="(min-width: 800px) 800px,
                                   100vw" />
                    <img src="{{ asset("/assets/images/gcs/world-map.png") }}"
                         alt="{{ t("gcs.page_3.image_alt") }}"
                         loading="lazy"
                         decoding="async" />
                </picture>
                <!-- Contenu de l'écran 3 -->
                <p class="mt-2">{{ t("gcs.page_3.text_1") }}</p>
            </section>
            <section id="{{ navItemsMap.gcs.anchors[2].id }}" class="screen-4 theme-white-dark py-2 px-2" aria-labelledby="title-4">
                <h2 id="title-4" class="screen-title title-4">{{ t("gcs.page_4.title") }}</h2>
                <!-- Contenu de l'écran 4 -->
            </section>
            <section id="{{ navItemsMap.gcs.anchors[3].id }}" class="screen-5 faq py-2 px-2">
                <h1 class="text-center">FAQ</h1>
                <p class="text-center">Frequently Asked Questions about Geological Carbon Storage</p>
                <details class="mb-1">
                    <summary>What is Geological Carbon Storage?</summary>
                    <p>
                        Geological Carbon Storage (GCS) is a technology that involves capturing carbon dioxide (CO2) emissions from industrial processes and storing them deep underground in geological formations.
                    </p>
                </details>
                <details class="mb-1">
                    <summary>How does GCS work?</summary>
                    <p>
                        GCS works by capturing CO2 at its source, compressing it, transporting it to a storage site, and injecting it into deep underground rock formations where it is permanently stored.
                    </p>
                </details>
                <details class="mb-1">
                    <summary>Is GCS safe?</summary>
                    <p>
                        Yes, GCS is considered safe when properly implemented. The technology has been used for decades, and extensive monitoring ensures the stored CO2 remains secure.
                    </p>
                </details>
            </section>
        </main>
    </gcs-content>
{% endblock %}
