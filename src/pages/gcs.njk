{% extends "main.njk" %}
{% block content %}
    <div class="gcs-content">   <!-- Load ECharts from CDN -->
        <script src="https://unpkg.com/echarts@6.0.0/dist/echarts.min.js"></script>
        <script type="application/json" id="i18n-gcs">{{ gcs | dump | safe }}</script>
        <!-- Load our GCS module after ECharts is available -->
        <script type="module" src="{{ asset("/assets/js/gcs.js") }}"></script>
        <link rel="stylesheet" href='{{ asset("/assets/styles/gcs.css") }}'>
        <main class="gcs_page">
            <!-- WHY section -->
            <section id="{{ navItemsMap.gcs.anchors[0].id }}"
                     class="screen-1 theme-turquoise py-2 px-2"
                     aria-labelledby="title-1">
                <h2 class="screen-title title-1" alt="{{ navItemsMap.gcs.anchors[0].title }}">{{ t("gcs.why.title") }}</h2>
                <!-- Contenu de l'écran 1 -->
                <h3 class="mt-2">{{ t("gcs.why.subtitle_1") }}</h3>
                <p class="mt-1">{{ t("gcs.why.text_1") }}</p>
                <h3 class="mt-2">{{ t("gcs.why.subtitle_2") }}</h3>
                <p class="mt-1">{{ t("gcs.why.text_2") }}</p>
                <h3 class="mt-2">{{ t("gcs.why.subtitle_3") }}</h3>
                <p class="mt-1">{{ t("gcs.why.text_3") }}</p>
            </section>
            <!-- World MAP-->
            <section id="{{ navItemsMap.gcs.anchors[1].id }}" class="gcs-world screen-3 theme-canard py-2 px-2" aria-labelledby="title-3">
                <h2 id="title-3" class="screen-title title-3">{{ t("gcs.world.title") |safe }}</h2>
                <div id="world-map-container" style="width: 100%; height: 600px;"></div>
                <p class="screen-main-text mt-2">{{ t("gcs.world.text_1") }}</p>
            </section>
            <!-- Switzerland MAP  -->
            <section id="{{ navItemsMap.gcs.anchors[2].id }}" class="screen-4 theme-white-dark py-2 px-2" aria-labelledby="title-4">
                <h2 id="title-4" class="screen-title title-4">{{ t("gcs.swiss.title") }}</h2>
                <div id="switzerland-map-container" style="width: 100%; height: 600px;"></div>
                <!-- Contenu de l'écran 4 -->
            </section>
            <section id="{{ navItemsMap.gcs.anchors[3].id }}" class="screen-5 faq py-2 px-2">
                <h1 class="text-center">FAQ</h1>
                <p class="text-center">Frequently Asked Questions about Geological Carbon Storage</p>
                <details class="mb-1">
                    <summary>What is Geological Carbon Storage?</summary>
                    <p>
                        Geological Carbon Storage (GCS) is a technology that involves capturing carbon dioxide (CO2) emissions from industrial processes and storing them deep underground in geological formations.
                    </p>
                </details>
                <details class="mb-1">
                    <summary>How does GCS work?</summary>
                    <p>
                        GCS works by capturing CO2 at its source, compressing it, transporting it to a storage site, and injecting it into deep underground rock formations where it is permanently stored.
                    </p>
                </details>
                <details class="mb-1">
                    <summary>Is GCS safe?</summary>
                    <p>
                        Yes, GCS is considered safe when properly implemented. The technology has been used for decades, and extensive monitoring ensures the stored CO2 remains secure.
                    </p>
                </details>
            </section>
        </main>
    </div>
{% endblock %}
