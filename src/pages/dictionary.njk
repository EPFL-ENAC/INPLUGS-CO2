{% block content %}
    <div class="data-content">
        <link rel="stylesheet" href='{{ asset("/assets/styles/dictionary.css") }}'>
        <main class="dictionary_page">
                <section class="references" id="references">
                    <h2> {{ t("dictionary.references.title") }} </h1>
