{% extends "main.njk" %}
{% block content %}
<index-content>
    <template shadowrootmode="open">
        <link rel="stylesheet" href='{{ asset("/assets/styles/landing_page_interactive.css") }}'>
        <link rel="stylesheet" href='{{ asset("/assets/styles/landing_page_svg_animate.css") }}'>
        <section class="landing_page is-full-page">
            <!-- Scroll position markers for navigation buttons -->
            <div id="scroll-marker-1" class="scroll-marker"></div>
            <div id="scroll-marker-2" class="scroll-marker"></div>
            <div id="scroll-marker-3" class="scroll-marker"></div>
            <div id="scroll-marker-4" class="scroll-marker"></div>
            <div id="scroll-marker-5" class="scroll-marker"></div>

            <div class="landing_page__visual">
                {% include "landing_svg.njk" %}
            </div>
            <!-- Info boxes for State 2 (explore mode) -->
            <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <symbol id="my-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path stroke="currentColor"  stroke-width="var(--icon-stroke-width, 0.9)"  d="M16.52 3.66A7 7 0 005 9.17a9.49 9.49 0 003 6.24c.51.58 1 1.18 1 1.49v2.38A2.72 2.72 0 0011.72 22h.56A2.72 2.72 0 0015 19.28V16.9c0-.31.53-.91 1-1.49A9.43 9.43 0 0019 9a7 7 0 00-2.48-5.34zM12.28 21h-.56A1.72 1.72 0 0110 19.28V18h4v1.28A1.72 1.72 0 0112.28 21zm3-6.25c-.73.81-1.3 1.46-1.3 2.15v.1H10v-.1c0-.69-.57-1.34-1.3-2.15A8.63 8.63 0 016 9.15a6 6 0 015-6.06A6 6 0 0118 9c0 2.7-1.56 4.46-2.7 5.75zM21.5 8h-1a.5.5 0 000 1h1a.5.5 0 000-1zM4 8.5a.5.5 0 00-.5-.5h-1a.5.5 0 000 1h1a.5.5 0 00.5-.5zM3.85 2.15a.49.49 0 00-.7.7l1 1a.48.48 0 00.7 0 .48.48 0 000-.7zM19.5 4a.47.47 0 00.35-.15l1-1a.49.49 0 00-.7-.7l-1 1a.48.48 0 000 .7.47.47 0 00.35.15zM19.85 13.15a.49.49 0 00-.7.7l1 1a.48.48 0 00.7 0 .48.48 0 000-.7zM4.15 13.15l-1 1a.48.48 0 000 .7.48.48 0 00.7 0l1-1a.49.49 0 00-.7-.7z"/>
                    <path stroke="currentColor"  stroke-width="var(--icon-stroke-width, 0.9)"  d="M13.15 7.15l-3 3a.47.47 0 00-.11.54.5.5 0 00.46.31h1.79l-1.14 1.15a.48.48 0 000 .7.48.48 0 00.7 0l2-2a.47.47 0 00.11-.54.5.5 0 00-.46-.31h-1.79l2.14-2.15a.49.49 0 00-.7-.7z"/>
                </symbol>
            </svg>
            <div class="info-boxes">
                <div id="info-box-1" class="info-box" alt="{{ t('homepage.info_boxes.box1.title') }}: {{ t('homepage.info_boxes.box1.description') | safe }}">
                    <h3>1.</h3>
                    <p>{{ t("homepage.info_boxes.box1.description") | safe }}</p>
                    <svg class="icon icon-large" width="24" height="24" aria-hidden="true">
                        <use href="#my-icon"></use>
                    </svg>

                </div>
                <div id="info-box-2" class="info-box" alt="{{ t('homepage.info_boxes.box2.title') }}: {{ t('homepage.info_boxes.box2.description') | safe }}">
                    <h3>2.</h3>
                    <p>{{ t("homepage.info_boxes.box2.description") | safe }}</p>
                    <svg class="icon icon-large" width="24" height="24" aria-hidden="true">
                        <use href="#my-icon"></use>
                    </svg>
                </div>
                <div id="info-box-3" class="info-box" alt="{{ t('homepage.info_boxes.box3.title') }}: {{ t('homepage.info_boxes.box3.description') | safe }}">
                    <h3>3.</h3>
                    <p>{{ t("homepage.info_boxes.box3.description") | safe }}</p>
                    <svg class="icon icon-large" width="24" height="24" aria-hidden="true">
                        <use href="#my-icon"></use>
                    </svg>
                </div>
                <div id="info-box-4" class="info-box" alt="{{ t('homepage.info_boxes.box4.title') }}: {{ t('homepage.info_boxes.box4.description') | safe }}">
                    <h3>4.</h3>
                    <p>{{ t("homepage.info_boxes.box4.description") | safe }}</p>
                    <svg class="icon icon-large" width="24" height="24" aria-hidden="true">
                        <use href="#my-icon"></use>
                    </svg>
                </div>
                <div id="info-box-5" class="info-box" alt="{{ t('homepage.info_boxes.box5.title') }}: {{ t('homepage.info_boxes.box5.description') | safe }}">
                    <h3>5</h3>
                    <p>{{ t("homepage.info_boxes.box5.description") | safe }}</p>
                    <svg class="icon icon-large" width="24" height="24" aria-hidden="true">
                        <use href="#my-icon"></use>
                    </svg>
                </div>
            </div>
        </section>

        <!-- Scroll Navigation Buttons -->
        <div class="scroll-nav-buttons">
            <button id="scroll-up-btn" class="scroll-nav-button" disabled>
                <svg class="scroll-arrow" viewBox="0 0 24 24">
                    <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z" />
                </svg>
            </button>
            <button id="scroll-down-btn" class="scroll-nav-button">
                <svg class="scroll-arrow scroll-arrow-down" viewBox="0 0 24 24">
                    <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z" />
                </svg>
            </button>
        </div>

        <picture class="minimap">
            <source srcset="
      {{ asset("/assets/images/landing-page-interactive/minimap@1x.webp 1x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@2x.webp 2x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@3x.webp 3x") }}
    " type="image/webp">
            <source srcset="
      {{ asset("/assets/images/landing-page-interactive/minimap@1x.png 1x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@2x.png 2x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@3x.png 3x") }}
    " type="image/png">
            <img src="{{ asset("/assets/images/landing-page-interactive/minimap@1x.png") }}" srcset="
      {{ asset("/assets/images/landing-page-interactive/minimap@1x.png 1x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@2x.png 2x") }},
      {{ asset("/assets/images/landing-page-interactive/minimap@3x.png 3x") }}
    " alt="Minimap preview" loading="lazy">

            <!-- Scroll position markers for navigation buttons -->
            <div id="scroll-minimap-marker-1" class="scroll-mini-marker">1</div>
            <div id="scroll-minimap-marker-2" class="scroll-mini-marker">2</div>
            <div id="scroll-minimap-marker-3" class="scroll-mini-marker">3</div>
            <div id="scroll-minimap-marker-4" class="scroll-mini-marker">4</div>
            <div id="scroll-minimap-marker-5" class="scroll-mini-marker">5</div>
        </picture>

        <script type="module" src='{{ asset("/assets/js/landing-page.js") }}'></script>
    </template>
</index-content>
{% endblock %}
