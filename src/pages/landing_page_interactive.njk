{% extends "main.njk" %}
{% block content %}
    <index-content>
    <template shadowrootmode="open">
        <link rel="stylesheet"
              href='{{ asset("/assets/styles/landing_page_interactive.css") }}'>
        <section class="landing_page is-full-page">
            <!-- Scroll position markers for navigation buttons -->
            <div id="scroll-marker-1" class="scroll-marker" style="position: absolute; top: 0vh;"></div>
            <div id="scroll-marker-2" class="scroll-marker" style="position: absolute; top: 100vh;"></div>
            <div id="scroll-marker-3" class="scroll-marker" style="position: absolute; top: 200vh;"></div>
            <div id="scroll-marker-4" class="scroll-marker" style="position: absolute; top: 300vh;"></div>
            <div id="scroll-marker-5" class="scroll-marker" style="position: absolute; top: 400vh;"></div>
            
            <div class="landing_page__visual">
                {% include "landing_svg.njk" %}
                <!-- <picture>
                    <source type="image/webp" srcset="/assets/images/landing-page/landing-page-illustration.webp  800w, /assets/images/landing-page/landing-page-illustration.webp 1600w" sizes="(min-width: 800px) 800px, 100vw" />
                    <source type="image/png" srcset="/assets/images/landing-page/landing-page-illustration.png  800w, /assets/images/landing-page/landing-page-illustration.png 1600w" sizes="(min-width: 800px) 800px, 100vw" />
                    <img src="/assets/images/landing-page/landing-page-illustration.png" alt="{{ t("homepage.image_alt") }}" loading="lazy" decoding="async" />
                </picture> -->
            </div>
            <!-- Info boxes for State 2 (explore mode) -->
            <div class="info-boxes">
                <div class="info-box">
                    <h3>{{ t("homepage.info_boxes.injection.title") }}</h3>
                    <p>{{ t("homepage.info_boxes.injection.description") }}</p>
                </div>
                <div class="info-box">
                    <h3>{{ t("homepage.info_boxes.formations.title") }}</h3>
                    <p>{{ t("homepage.info_boxes.formations.description") }}</p>
                </div>
                <div class="info-box">
                    <h3>{{ t("homepage.info_boxes.monitoring.title") }}</h3>
                    <p>{{ t("homepage.info_boxes.monitoring.description") }}</p>
                </div>
                <div class="info-box">
                    <h3>{{ t("homepage.info_boxes.safety.title") }}</h3>
                    <p>{{ t("homepage.info_boxes.safety.description") }}</p>
                </div>
            </div>
        </section>
        
        <!-- Scroll Navigation Buttons -->
        <div class="scroll-nav-buttons">
            <button id="scroll-up-btn" class="scroll-nav-button" disabled>
                <svg class="scroll-arrow" viewBox="0 0 24 24">
                    <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z"/>
                </svg>
            </button>
            <button id="scroll-down-btn" class="scroll-nav-button">
                <svg class="scroll-arrow scroll-arrow-down" viewBox="0 0 24 24">
                    <path d="M7.41 15.41L12 10.83l4.59 4.58L18 14l-6-6-6 6z"/>
                </svg>
            </button>
        </div>
        
        <script type="module" src='{{ asset("/assets/js/landing-page.js") }}'></script>
    </template>
    </index-content>
{% endblock %}
