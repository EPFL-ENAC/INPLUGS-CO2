{% extends "main.njk" %}

{% block content %}

<index-content>
  <template shadowrootmode="open">
    {% if isProduction and cssHash %}
    <link rel="stylesheet" href="/assets/styles/landing_page.{{ cssHash }}.css">
    {% else %}
    <link rel="stylesheet" href="/assets/styles/landing_page.css">
    {% endif %}
    
    <section class="landing_page">
        <div class="landing_page__content">
            <h1>{{ t("homepage.title") }}</h1>

            <a href="/landing_page_full" class="btn-cta">{{ t("homepage.button") }}</a>
        </div>

        <div class="landing_page__visual">
            <!-- Progressive layered SVG loader (decorative) -->
            <div class="landing_page__svg-wrapper" aria-hidden="true"
                 data-illustration
                 data-fragments='[
                   "/assets/svg-optimized/base.svg",
                   "/assets/svg-optimized/surface-back.svg",
                   "/assets/svg-optimized/surface-front.svg",
                   "/assets/svg-optimized/smoke.svg"
                 ]'
                 data-skip-smoke-reduced-motion="true"
                 data-max-retries="1"
                 data-timeout-ms="6000">
              <div class="landing_page__svg-layer landing_page__svg-layer--base" data-layer="0"></div>
              <div class="landing_page__svg-layer landing_page__svg-layer--surface-back" data-layer="1"></div>
              <div class="landing_page__svg-layer landing_page__svg-layer--surface-front" data-layer="2"></div>
              <div class="landing_page__svg-layer landing_page__svg-layer--smoke" data-layer="3"></div>
              <noscript>
                <picture>
                  <source type="image/webp" srcset="/assets/images/landing-page/landing-page-illustration.webp" />
                  <img src="/assets/images/landing-page/landing-page-illustration.webp" alt="" loading="lazy" decoding="async" />
                </picture>
              </noscript>
            </div>
        </div>

    </section>

    <script type="module" src="/assets/js/landing-page.js"></script>

  </template>
</index-content>

{% endblock %}
