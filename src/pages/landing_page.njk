{% extends "main.njk" %}
{% block content %}
    <index-content>
    <template shadowrootmode="open">
        <link rel="stylesheet"
              href='{{ asset("/assets/styles/landing_page.css") }}'>
        <section class="landing_page">
            <div class="landing_page__content">
                <h1>{{ t("homepage.title") }}</h1>
                <a href="/landing_page_interactive" class="btn-cta">{{ t("homepage.button") }}</a>
            </div>
            <div class="landing_page__visual">
                <picture>
                    <!-- WEBP source -->
                    <source type="image/webp"
                            srcset="/assets/images/landing-page/INPLUG_illustration_cylindre_sansechelle%201_clear_sky.webp 800w,
                                    /assets/images/landing-page/INPLUG_illustration_cylindre_sansechelle%201_clear_sky.webp 1600w"
                            sizes="(min-width: 800px) 800px,
                                   100vw">
                    <!-- PNG source -->
                    <source type="image/png"
                            srcset="/assets/images/landing-page/INPLUG_illustration_cylindre_sansechelle%201_clear_sky.png 800w,
                                    /assets/images/landing-page/INPLUG_illustration_cylindre_sansechelle%201_clear_sky.png 1600w"
                            sizes="(min-width: 800px) 800px,
                                   100vw">
                    <!-- Ultimate fallback -->
                    <img src="/assets/images/landing-page/INPLUG_illustration_cylindre_sansechelle%201_clear_sky.png"
                         alt="{{ t("homepage.image_alt") }}"
                         loading="lazy"
                         decoding="async">
                </picture>
            </section>
            <script type="module" src='{{ asset("/assets/js/landing-page.js") }}'></script>
        </template>
        </index-content>
    {% endblock %}
