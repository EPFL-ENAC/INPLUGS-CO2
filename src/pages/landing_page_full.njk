{% extends "main.njk" %} {% block content %}

<index-content>
  <template shadowrootmode="open">
    {% if isProduction and cssHash %}
    <link rel="stylesheet" href="/assets/styles/landing_page.{{ cssHash }}.css">
    {% else %}
    <link rel="stylesheet" href="/assets/styles/landing_page.css">
    {% endif %}

    <section class="landing_page is-full-page">

      <div class="landing_page__visual">
        <picture>
          <!-- WEBP source -->
          <source
            type="image/webp"
            srcset="
              /assets/images/landing-page/landing-page-illustration.webp  800w,
              /assets/images/landing-page/landing-page-illustration.webp 1600w
            "
            sizes="(min-width: 800px) 800px, 100vw"
          />

          <!-- PNG source -->
          <source
            type="image/png"
            srcset="
              /assets/images/landing-page/landing-page-illustration.png  800w,
              /assets/images/landing-page/landing-page-illustration.png 1600w
            "
            sizes="(min-width: 800px) 800px, 100vw"
          />

          <!-- Ultimate fallback -->
          <img
          src="/assets/images/landing-page/landing-page-illustration.png"
          alt="{{ t("homepage.image_alt") }}" loading="lazy" decoding="async" />
        </picture>
      </div>

      <!-- Info boxes for State 2 (explore mode) -->
      <div class="info-boxes">
        <div class="info-box">
          <h3>{{ t("homepage.info_boxes.injection.title") }}</h3>
          <p>{{ t("homepage.info_boxes.injection.description") }}</p>
        </div>
        <div class="info-box">
          <h3>{{ t("homepage.info_boxes.formations.title") }}</h3>
          <p>{{ t("homepage.info_boxes.formations.description") }}</p>
        </div>
        <div class="info-box">
          <h3>{{ t("homepage.info_boxes.monitoring.title") }}</h3>
          <p>{{ t("homepage.info_boxes.monitoring.description") }}</p>
        </div>
        <div class="info-box">
          <h3>{{ t("homepage.info_boxes.safety.title") }}</h3>
          <p>{{ t("homepage.info_boxes.safety.description") }}</p>
        </div>
      </div>
    </section>

    <script type="module" src="/assets/js/landing-page.js"></script>
  </template>
</index-content>

{% endblock %}
