                        <h2 class="member_name"> {{ t("about.team.member.Helene.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Helene.role") }} </h3>
                    </div>
                </div>
                <div class="team_member laetitia">
                    <img class="member_img" src="{{ asset("/assets/images/about/Laetitia_Dallenbach.jpg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Laetitia.name") }} </h2>
