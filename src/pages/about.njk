{% extends "main.njk" %}
{% block content %}
    <div class="about-content">
        <link rel="stylesheet" href='{{ asset("/assets/styles/about.css") }}'>
        <!-- 
            "team",
            "mission-values
            "funding",
            "contact-form
            "support-us
        -->
        <main class="about_page">
            <!-- about section-->
             <section class="about_intro">
                <md-block src='{{ asset("/assets/markdown/about_" + locale + ".md") }}' class="about__intro">
                    `{{ asset("/assets/markdown/about_" + locale + ".md") }}` was *not* found.
                </md-block>
            </section>
            <!-- team section -->
            <section id="{{ navItemsMap.about.anchors[0].id }}" class="{{ navItemsMap.about.anchors[0].id }}">
                <h1 class="team_title">{{ t("about.team.title") }}</h1>
                <div class="team_member eleni">
                    <img class="member_img" src="{{ asset("/assets/images/about/Eleni_Stavropoulou.png") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Eleni.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Eleni.role") }} </h3>
                    </div>
                </div>
                <div class="team_member helene">
                    <img class="member_img" src="{{ asset("/assets/images/about/Helene_Morciaux.jpeg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Helene.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Helene.role") }} </h3>
                    </div>
                </div>
                <div class="team_member laetitia">
                    <img class="member_img" src="{{ asset("/assets/images/about/Laetitia_Dallenbach.jpg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Laetitia.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Laetitia.role") }} </h3>
                    </div>
                </div>
                <div class="team_member marc">
                    <img class="member_img" src="{{ asset("/assets/images/about/Marc_Borboen.jpg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Marc.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Marc.role") }} </h3>
                    </div>
                </div>
                <div class="team_member pierre">
                    <img class="member_img" src="{{ asset("/assets/images/about/Pierre_Guilbert.jpg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Pierre.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Pierre.role") }} </h3>
                    </div>
                </div>
                <div class="team_member charlie">
                    <img class="member_img" src="{{ asset("/assets/images/about/photo_charlie.png") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Charlie.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Charlie.role") }} </h3>
                    </div>
                </div>
                <div class="team_member hugo">
                    <img class="member_img" src="{{ asset("/assets/images/about/Hugo_Solleder.jpg") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member.Hugo.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Hugo.role") }} </h3>
                    </div>
                </div>
            </section>
            <!-- missions and values -->
            <section id="{{ navItemsMap.about.anchors[1].id }}" class="{{ navItemsMap.about.anchors[1].id }}">
                <div class="missions">
                    <h1 class="missions_title">{{ t("about.missions.title") }}</h1>
                    <img class="missions_img" src="{{ asset("/assets/images/about/mission.svg") }}" alt="Missions Image">
                    <p class="missions_text">{{ t("about.missions.text") }}</p>
                </div>
                <div class="values">
                    <h1 class="values_title">{{ t("about.values.title") }}</h1>
                    <img class="values_img" src="about:blank" alt="Values Image">
                    <p class="values_text">{{ t("about.values.text") }}</p>
                </div>
            </section>
            <!-- funding -->
            <section id="{{ navItemsMap.about.anchors[2].id }}" class="{{ navItemsMap.about.anchors[2].id }}">
                <!-- 
                about.funding.title: INPLUGS-CO2 has received financial support by
                about.funding.text_1: Carbon Removel Booster, powered by Innosuisse
                about.funding.text_2: and the Swiss Federal Office of Energy (SFOE) in the frame of the EnRUp-GCS (EPFL) project
                -->
                <h1 class="funding_title">{{ t("about.funding.title") |safe }}</h1>
                <div class="about__funding">
                    <p class="funding_text">{{ t("about.funding.text_1") }}</p>
                    <picture class="funding_logo">
                        <source srcset="{{ asset("/assets/images/about/logo_carbon_removal_booster.webp") }}" type="image/webp">
                        <img src="{{ asset("/assets/images/about/logo_carbon_removal_booster.png") }}" alt="Logo Carbon Removal Booster"> 
                    </picture>
                    <p class="funding_text">{{ t("about.funding.text_2") }}</p>
                    <picture class="funding_logo">
                        <source srcset="{{ asset("/assets/images/about/logo_sfoe.webp") }}" type="image/webp">
                        <img src="{{ asset("/assets/images/about/logo_sfoe.png") }}" alt="Logo SFOE"> 
                    </picture>
                </div>
            </section>
            <!-- contact-form -->
            <section id="{{ navItemsMap.about.anchors[3].id }}" class="about__{{ navItemsMap.about.anchors[3].id }}">
                <h2>{{ t("about.contact.title") }}</h2>
                <form class="about__contact-form">
                    <!-- name -->
                    <label for="name">{{ t("about.contact.form.name") }}</label>
                    <input type="text" id="name" name="name" placeholder="{{ t("about.contact.form.name_placeholder") }}" required>
                    <!-- email -->
                    <label for="email">{{ t("about.contact.form.email") }}</label>
                    <input type="email" id="email" name="email" placeholder="{{ t("about.contact.form.email_placeholder") }}" required>
                    <!-- message -->
                    <label for="message">{{ t("about.contact.form.message") }}</label>
                    <textarea id="message" name="message" placeholder="{{ t("about.contact.form.message_placeholder") }}" required></textarea>
                    <!-- submit button -->
                    <button type="submit">{{ t("about.contact.form.submit") }}</button>
                </form>
            </section>
            <!-- support-us -->
            <section id="{{ navItemsMap.about.anchors[4].id }}" class="about__{{ navItemsMap.about.anchors[4].id }}">
                <h2>{{ t("about.support.title") }}</h2>
                <div class="about__support">
                    <ol>
                        <li>
                            <!-- IBAN title -->
                            <h2>{{ t("about.support.iban.title") }}</h2>
                            <!-- IBAN number -->
                            <p>{{ t("about.support.iban.number") }}</p>
                        </li>
                        <li>
                            <!-- Account holder -->
                            <h2>{{ t("about.support.account_holder.title") }}</h2>
                            <!-- Account holder name -->
                            <p>{{ t("about.support.account_holder.name") }}</p>
                        </li>
                    </ol>
                    <picture>
                        <!-- qr code of iban -->
                        <source srcset="{{ asset("/assets/images/about/qr_code_iban.svg") }}" type="image/svg+xml">
                        <img src="{{ asset("/assets/images/about/qr_code_iban.png") }}" alt="QR Code IBAN"> 
                    </picture>
                </div>
            </section>
        </main>
        <script type="module" src="https://md-block.verou.me/md-block.js"></script>
    </div>
{% endblock %}
