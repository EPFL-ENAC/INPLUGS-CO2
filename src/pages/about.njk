{% extends "main.njk" %}
{% block content %}
    <div class="about-content">
        <link rel="stylesheet" href='{{ asset("/assets/styles/about.css") }}'>
        <main class="about_page">
            <section class="missions_values">
                <div class="missions">
                    <h1 class="missions_title">{{ t("about.missions.title") }}</h1>
                    <img class="missions_img" src="{{ asset("/assets/images/about/mission.svg") }}" alt="Missions Image">
                    <p class="missions_text">{{ t("about.missions.text") }}</p>
                </div>
                <div class="values">
                    <h1 class="values_title">{{ t("about.values.title") }}</h1>
                    <img class="values_img" src="about:blank" alt="Values Image">
                    <p class="values_text">{{ t("about.values.text") }}</p>
                </div>
            </section>
            <section class="team">
                <h1 class="team_title">{{ t("about.team.title") }}</h1>
                <div class="team_member first">
                    <img class="member_img" src="{{ asset("/assets/images/about/photo_eleni.png") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member[0].name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member[0].role") }} </h3>
                    </div>
                </div>
                <div class="team_member middle">
                    <img class="member_img" src="{{ asset("/assets/images/about/photo_eleonora.png") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member[1].name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member[1].role") }} </h3>
                    </div>
                </div>
                <div class="team_member last">
                    <img class="member_img" src="{{ asset("/assets/images/about/photo_charlie.png") }}" alt="Member Image">
                    <div class="member_info">
                        <h2 class="member_name"> {{ t("about.team.member[2].name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member[2].role") }} </h3>
                    </div>
                </div>
        </main>
    </div>
{% endblock %}
