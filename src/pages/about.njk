                        <h2 class="member_name"> {{ t("about.team.member.Hugo.name") }} </h2>
                        <h3 class="member_role"> {{ t("about.team.member.Hugo.role") }} </h3>
                    </div>
                </div>
            </section>
            <section class="missions_values">
                <div class="missions">
                    <h1 class="missions_title">{{ t("about.missions.title") }}</h1>
                    <img class="missions_img" src="{{ asset("/assets/images/about/mission.svg") }}" alt="Missions Image">
                    <p class="missions_text">{{ t("about.missions.text") }}</p>
                </div>
                <div class="values">
                    <h1 class="values_title">{{ t("about.values.title") }}</h1>
                    <img class="values_img" src="about:blank" alt="Values Image">
                    <p class="values_text">{{ t("about.values.text") }}</p>
                </div>
            </section>
        </main>
    </div>
